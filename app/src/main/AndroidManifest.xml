<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.welfare">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="sendotp.key"
            android:value="@string/sendotp_key" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PersonalDetailsActivity"
            android:parentActivityName=".MainActivity"
            android:label="Personal Details"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity
            android:name=".LoginActivity"
            android:label="@string/activity_login_title" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/activity_signup_title"/>
        <activity
            android:name=".RenewMembershipActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/activity_renew_membership_title"/>
        <activity
            android:name=".BankingDetailsActivity"
            android:parentActivityName=".OtherDetailsActivity"
            android:label="Banking Details"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity
            android:name=".FamilyDetailsActivity"
            android:parentActivityName=".PersonalDetailsActivity"
            android:label="Family Details"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity
            android:name=".TradingDetailsActivity"
            android:parentActivityName=".FamilyDetailsActivity"
            android:label="Trading Details"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity
            android:name=".OtherDetailsActivity"
            android:parentActivityName=".TradingDetailsActivity"
            android:label="Other Details"
            android:windowSoftInputMode="stateHidden|adjustResize"/>


        <activity
            android:name=".PaymentDetailsActivity"
            android:parentActivityName=".BankingDetailsActivity"
            android:label="Payment Details"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity
            android:name=".ClassChangeActivity"
            android:parentActivityName=".MainActivity"
            android:label="Class Change"/>

        <activity
            android:name=".OtpVerificationActivity"
            android:label="Otp Verification" />

        <activity android:name=".LanguageActivity"
            android:label="Choose Language" />

    </application>

</manifest>