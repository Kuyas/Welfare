<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:gravity="start"
        android:textStyle="bold"
        android:text="@string/login_login" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/login_name_field" />
    <EditText
        android:textAlignment="center"
        android:maxLength="100"
        android:inputType="text"
        android:hint="@string/login_name_field_hint"
        android:id="@+id/linearlayout_login_name"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="60dp" />
    <TextView
        android:layout_gravity="center"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/login_password_field" />
    <EditText
        android:textAlignment="center"
        android:maxLength="100"
        android:inputType="textPassword"
        android:hint="@string/login_password_field_hint"
        android:id="@+id/linearlayout_login_password"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="60dp" />
    <Button
        android:text="@string/login_submit"
        android:id="@+id/linearlayout_login_submit"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="60dp" />
    <Button
        android:text="@string/login_signup"
        android:id="@+id/linearlayout_login_signup"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="60dp" />
</LinearLayout>