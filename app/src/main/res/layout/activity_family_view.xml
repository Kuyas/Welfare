<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/family_details_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_family_details_card_view_height"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_margin="8dp"
    android:background="@color/colorAccent"
    app:cardCornerRadius="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_family_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/activity_family_details_rows_text_size"
            android:textColor="@color/colorEditText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/text_view_family_member_age"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:textSize="@dimen/activity_family_details_rows_text_size"
                android:textColor="@color/colorEditText" />

            <TextView
                android:id="@+id/text_view_family_member_gender"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textSize="@dimen/activity_family_details_rows_text_size"
                android:textColor="@color/colorEditText" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_family_member_occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_family_details_rows_text_size"
            android:textColor="@color/colorEditText"/>

        <TextView
            android:id="@+id/text_view_family_member_relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_family_details_rows_text_size"
            android:textColor="@color/colorEditText"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

