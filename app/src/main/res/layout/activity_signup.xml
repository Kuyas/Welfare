<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar_main"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_signup_textinput_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_signup_edittext_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/activity_signup_mobile_field"
                android:inputType="phone"
                android:digits="0123456789"
                android:maxLength="10"
                android:textColor="@color/inputTextColor" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_signup_textinput_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_signup_edittext_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/activity_signup_password_field"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/inputTextColor" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_signup_textinput_retype_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_signup_edittext_retype_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/activity_signup_retype_password_field"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textColor="@color/inputTextColor" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_signup_textinput_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_signup_edittext_otp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/activity_signup_otp_field"
                android:inputType="number"
                android:textAllCaps="true"
                android:maxLength="6"
                android:textColor="@color/inputTextColor" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_signup_button_send_otp"
            android:text="@string/activity_signup_button_send_otp"
            android:layout_margin="12dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_signup_button_signup"
            android:text="@string/activity_signup_title"
            android:layout_margin="12dp"/>
    </LinearLayout>

</LinearLayout>